<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#662196F3"
    tools:context=".AdminLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#662196F3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#303F9F"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#303F9F"
            android:textSize="16dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#303F9F"
            android:text="Administration Privileges"
            android:textSize="22dp" />

        <Button
            android:id="@+id/serviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="servicesOnClick"
            android:text="Show All Services"
            android:textAllCaps="false"
            android:textColor="#FCFCFC" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/showBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="showOnClick"
            android:text="Show All Accounts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#7B1FA2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="addOnClick"
            android:text="Add Services"
            android:textAllCaps="false"
            android:textColor="#F3F3F3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="editOnClick"
            android:text="Edit Services"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="deleteOnClick"
            android:text="Delete Services"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/accountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="accountOnClick"
            android:text="Account Manage"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#7B1FA2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="SAC"
            android:text="Show All Clinics"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="ServiceByClinic"
            android:text="Service By Specific Clinic"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>