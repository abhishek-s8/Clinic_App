<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#662196F3"
    tools:context=".AdminLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#662196F3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#303F9F"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#303F9F"
            android:textSize="16dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#303F9F"
            android:text="Administration Privileges"
            android:textSize="22dp" />

        <Button
            android:id="@+id/serviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="servicesClick"
            android:text="Show All Services"
            android:textAllCaps="false"
            android:textColor="#FCFCFC" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/showBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="showClick"
            android:text="Show All Accounts"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#7B1FA2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="addClick"
            android:text="Add Services"
            android:textAllCaps="false"
            android:textColor="#F3F3F3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="editClick"
            android:text="Edit Services"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B1FA2"
            android:onClick="deleteClick"
            android:text="Delete Services"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/accountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C2185B"
            android:onClick="accountClick"
            android:text="Account Manage"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#7B1FA2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>